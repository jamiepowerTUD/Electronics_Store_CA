<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/manager_recycler"
        android:layout_width="match_parent"
        android:layout_height="490dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="118dp"
        android:layout_marginTop="10dp"
        android:text="Stock Management"
        android:textColor="@color/blue"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/item_management_search"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/round_text"
        android:ems="10"
        android:hint="Search"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ImageButton
        android:id="@+id/management_search"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/round_button"
        android:paddingRight="20dp"
        android:onClick="filterManager"
        app:layout_constraintStart_toEndOf="@+id/item_management_search"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_magnifying_glass" />

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/management_search">

        <RadioButton
            android:id="@+id/manager_name_radio"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Name"
            android:textColor="@color/blue"
            android:textStyle="bold"
            app:useMaterialThemeColors="false" />

        <RadioButton
            android:id="@+id/manager_cat_radio"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="0"
            android:text="Category"
            android:textColor="@color/blue"
            android:textStyle="bold"
            app:useMaterialThemeColors="false" />

        <RadioButton
            android:id="@+id/manager_man_radio"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Manufacturer"
            android:textColor="@color/blue"
            android:textStyle="bold"
            app:useMaterialThemeColors="false" />

    </RadioGroup>

    <Button
        android:id="@+id/manager_sort_name"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/round_button"
        android:onClick="sortManagerName"
        android:text="Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup2" />

    <Button
        android:id="@+id/manager_sort_man"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/round_button"
        android:onClick="sortManagerManufacturer"
        android:text="Manufacturer"
        android:textSize="10dp"
        app:layout_constraintStart_toEndOf="@+id/manager_sort_name"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup2" />

    <Button
        android:id="@+id/manager_sort_price"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/round_button"
        android:onClick="sortManagerPrice"
        android:text="Price"
        app:layout_constraintStart_toEndOf="@+id/manager_sort_man"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup2" />

</androidx.constraintlayout.widget.ConstraintLayout>