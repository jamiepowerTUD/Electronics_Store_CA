<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="144dp"
        android:layout_height="40dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="11dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Color"
        android:textColor="@color/blue"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/item_page_color"
        android:layout_width="144dp"
        android:layout_height="40dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="11dp"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/item_page_price" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="144dp"
        android:layout_height="40dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Amount"
        android:textColor="@color/blue"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/item_page_amount"
        android:layout_width="144dp"
        android:layout_height="40dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/item_page_color" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="144dp"
        android:layout_height="40dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="13dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Category"
        android:textColor="@color/blue"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/item_page_cat"
        android:layout_width="144dp"
        android:layout_height="40dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="13dp"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/item_page_man" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="144dp"
        android:layout_height="40dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="14dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Price"
        android:textColor="@color/blue"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/item_page_price"
        android:layout_width="144dp"
        android:layout_height="40dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="14dp"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/item_page_cat" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="144dp"
        android:layout_height="40dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="17dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Manufacturer"
        android:textColor="@color/blue"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/item_page_man"
        android:layout_width="144dp"
        android:layout_height="40dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="17dp"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/item_page_name" />

    <ImageView
        android:id="@+id/item_page_image"
        android:layout_width="144dp"
        android:layout_height="140dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="144dp"
        android:layout_height="40dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="35dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Title"
        android:textColor="@color/blue"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_page_image" />

    <TextView
        android:id="@+id/item_page_name"
        android:layout_width="144dp"
        android:layout_height="40dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="35dp"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/item_page_image" />

    <Button
        android:id="@+id/review_button"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/round_button"
        android:text="Feedback"
        android:onClick="showFeedBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <Button
        android:id="@+id/addreview_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/round_button"
        android:text="Add Review"
        android:onClick="addReview"
        app:layout_constraintStart_toEndOf="@+id/review_button"
        app:layout_constraintTop_toBottomOf="@+id/item_page_amount" />

    <Button
        android:id="@+id/addtocard_button"
        android:layout_width="160dp"
        android:layout_height="47dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/round_button"
        android:onClick="addToCart"
        android:text="Add to Cart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/review_button" />

</androidx.constraintlayout.widget.ConstraintLayout>